<div class="card-columns">
  <% @posts.each do |post| %>
    <div class="card" style="width: 30rem;">
      <%= image_tag post.cover.url, class: 'card-img-top' %>
      <div class="card-body">
        <h5 class="card-title"><%= post.title %></h5>
        <p class="card-text"> <%= post.body %></p>
        <%= link_to 'Open', post, class: 'btn btn-primary'%>
      </div>
    </div>
  <% end %>
</div>