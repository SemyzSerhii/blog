<div class= "center">
  <h1 class="sign_up"> Sign Up</h1>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>

  <% end %>
  <div class="form-group">
    <div class="col-md-6">
      <%= f.label :username , class:"user_save" %><br />
      <%= f.text_field :username , required: true, class: "form-control" , placeholder: "Enter Your Username"%>
      <small id="titleHelp" class="form-text text-danger">
        <%= @user.errors[:username].join(', ') %>
      </small>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-6">
      <%= f.label :password, class: "but_password_save" %><br />
      <%= f.password_field :password, required: true, class: "form-control",  placeholder: "Enter Your Password"  %>
      <small id="titleHelp" class="form-text text-danger">
        <%= @user.errors[:password].join(', ') %>
      </small>
    </div>
  </div>
  <div class="form-group">
    <div class="col-md-6">
      <%= f.label :password_confirmation, class: "but_user_save_password2"  %><br/>
      <%= f.password_field :password_confirmation , required: true, class: "form-control",  placeholder: "Confirm Your Password"%>
       <small id="titleHelp" class="form-text text-danger">
         <%= @user.errors[:password_confirmation].join(', ') %>
       </small>
    </div>
  </div>
  <div class="but_data_save "><button type="submit" class="btn btn-primary col-md-3">Save Your Data</button></div>
  <% end %>
</div>